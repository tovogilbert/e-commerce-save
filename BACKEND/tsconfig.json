{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": ".src",
      "paths": {
        "@core/*": ["src/core/*"],
        "@infra/*": ["src/infrastructure/*"],
        "@interfaces/*": ["src/interfaces/*"],
        "@shared/*": ["src/shared/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }